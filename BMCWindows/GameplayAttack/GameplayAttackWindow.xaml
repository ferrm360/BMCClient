    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" MinHeight="101" />
            </Grid.RowDefinitions>

            <!-- Contenedor del Tablero del Jugador -->
            <Grid Grid.Column="0" Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Para el título -->
                    <RowDefinition Height="*" />
                    <!-- Para el tablero -->
                </Grid.RowDefinitions>

                <!-- Título del Tablero del Jugador -->
                <TextBlock Text="Tu Tablero" FontSize="16" FontWeight="Bold" 
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10" 
               TextWrapping="Wrap" />

                <!-- Tablero del Jugador -->
                <Grid x:Name="PlayerBoardGrid" Grid.Row="1" Background="Transparent" 
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
          MinHeight="300" MinWidth="300">
                    <!-- Las filas y columnas serán generadas dinámicamente en el CodeBehind -->
                </Grid>
            </Grid>

            <!-- Texto VS -->
            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="74">
                <TextBlock Text="VS" FontSize="36" FontWeight="Bold" Foreground="Black" />
            </Grid>

            <!-- Contenedor del Tablero del Enemigo -->
            <Grid Grid.Column="2" Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Para el título -->
                    <RowDefinition Height="*" />
                    <!-- Para el tablero -->
                </Grid.RowDefinitions>

                <!-- Título del Tablero del Enemigo -->
                <TextBlock Text="Tablero del Enemigo" FontSize="16" FontWeight="Bold" 
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"
               TextWrapping="Wrap" />

                <!-- Tablero del Enemigo -->
                <Grid x:Name="EnemyBoardGrid" Grid.Row="1" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
                    <!-- Las filas y columnas serán generadas dinámicamente en el CodeBehind -->
                </Grid>

            </Grid>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="409*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="177*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" BorderBrush="Transparent">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/BrownButton.png"/>
                </Button.Background>
                <TextBlock Text="Cancel" Grid.Row="0" Grid.Column="0" IsHitTestVisible="False"/>
            </Button>

        </Grid>
        

