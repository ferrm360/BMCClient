<Page x:Class="BMCWindows.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BMCWindows"
      xmlns:p="clr-namespace:BMCWindows.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage"
      Background="#FEFFDB"
      >
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="129*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="277*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="122*"/>
                <ColumnDefinition Width="387*"/>
                <ColumnDefinition Width="221*"/>
            </Grid.ColumnDefinitions>

            <!-- <Image x:Name="imageProfilePicture" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"/> -->
            <Ellipse VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0">
                <Ellipse.Fill>
                    <ImageBrush x:Name="ProfileImageBrush" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>

        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="133*"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="178*"/>
                <RowDefinition Height="102*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="117*"/>
            </Grid.ColumnDefinitions>
            <Image Source="GreenRectangle.png" Grid.Column="0" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <Label x:Name="labelFriends" Grid.Row="1" Margin="5,5,5,5" Padding="3" Content="Friends" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <ListBox x:Name="FriendsList" Grid.Row="2" Margin="10,10,10,10" Visibility="Visible" SelectionChanged="SelectFriend" BorderBrush="Transparent">
                <ListBox.Background>
                    <ImageBrush ImageSource="Images/GreenRectangle.png"/>
                </ListBox.Background>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#DDD" Margin="2" CornerRadius="5" >
                            <StackPanel Orientation="Horizontal" Margin="5" Background="#43224D">
                                <Image x:Name="myImageControl" Source="{Binding FriendPicture}"  Width="40" Height="40" Margin="5"/>
                                <TextBlock Text="{Binding UserName}" VerticalAlignment="Center" FontSize="16" Margin="5" Foreground="#FEFFDB"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>
        <Expander Header="Amigos" ExpandDirection="Up" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="250" Height="23">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="Chat" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </DataTemplate>
            </Expander.HeaderTemplate>

            <Border Background="LightGray" CornerRadius="8" Padding="10">
                <StackPanel>
                    <TextBox x:Name="textBoxSearchFriendsChats" Margin="5" />

                    <ListBox x:Name="ChatList" Margin="5" SelectionChanged="SelectFriendChat">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#DDD" CornerRadius="5" Margin="5">
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Image Source="{Binding FriendPicture}" Width="40" Height="40" Margin="5"/>
                                        <TextBlock Text="{Binding UserName}" VerticalAlignment="Center" FontSize="16" Margin="5"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Expander>

        <Grid x:Name="ChatGrid" Visibility="Collapsed" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="268*"/>
                <ColumnDefinition Width="127*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="127*"/>
                <RowDefinition Height="78*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="Images/GreenRectangle.png" Grid.Column="1" Grid.Row="1" Stretch="Fill" Grid.RowSpan="2"/>

            <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="5,25,10,0" >

                <ItemsControl x:Name="ChatMessages" ItemsSource="{Binding FriendChatMessages}" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column="0" Width="30" Height="30" Fill="LightGray" Margin="0,0,10,0">
                                    <Ellipse.ToolTip>
                                        <TextBlock Text="{Binding Sender}" />
                                    </Ellipse.ToolTip>
                                </Ellipse>
                                <TextBlock Grid.Column="1" Text="{Binding Messages}" TextWrapping="Wrap" HorizontalAlignment="{Binding Alignment}" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>

            </ScrollViewer>

            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10,10,10,10"  HorizontalAlignment="Right">
                <TextBox x:Name="textBoxFriendMessage" Width="200" Margin="0,0,5,0"/>
                <Button Content="Enviar" Click="SendMessageToFriend"/>
            </StackPanel>
            <Button Content="Cancel"  Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,5,20,0"/>
            <Label x:Name="labelFriendName" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="533*"/>
                <ColumnDefinition Width="267*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="172*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="Auto" MinHeight="39.96"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="generalMessages" Grid.Row="1" Margin="10,2,10,10" Background="#B0D480" BorderBrush="#43224D" BorderThickness="2">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <!--<TextBlock Text="{Binding Sender}" FontWeight="Bold"/>-->
                            <TextBlock Text="{Binding Messages}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,10,10,10">
                <TextBox x:Name="textboxGeneralChat" Width="350" Margin="0,0,0,0" BorderBrush="Transparent" Padding="10,5,10,5">
                    <TextBox.Background>
                        <ImageBrush ImageSource="Images/LongTextBox.png" Stretch="Fill" />
                    </TextBox.Background>
                </TextBox>

                <Button Content="Enviar" Click="SendGeneralMessage" BorderBrush="Transparent">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/BrownButton.png" Stretch="Fill"/>
                    </Button.Background>
                </Button>
            </StackPanel>

        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="43*"/>
                <RowDefinition Height="61*"/>

                <RowDefinition Height="346*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190*"/>
                <ColumnDefinition Width="216*"/>
                <ColumnDefinition Width="135*"/>
                <ColumnDefinition Width="135*"/>
                <ColumnDefinition Width="135*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="labelUserName" Content="User" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="50" FontFamily="Press Start 2P Regular"  Margin="0,0,0,0"/>
            <Button x:Name="buttonGames"   Background="Transparent" BorderBrush="Transparent" Grid.Column="2" Grid.Row="1"  Click="GoToGames"/>
            <Image Source="Images/BrownButton.png" Grid.Column="2" Grid.Row="1" IsHitTestVisible="False" Stretch="Fill" Margin="2,2,2,2"/>
            <TextBlock Text="Games" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" IsHitTestVisible="False" />
            <Button x:Name="buttonCards" Grid.Column="3" Grid.Row="1" Background="Transparent" BorderBrush="Transparent"/>
            <Image Source="Images/BrownButton.png" Grid.Column="3" Grid.Row="1" Stretch="Fill" IsHitTestVisible="False" Margin="2,2,2,2"/>
            <TextBlock Text="Cards" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>



        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="23*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56*"/>
                <ColumnDefinition Width="625*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="buttonOpenContextMenu" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Stretch" Margin="0,5,0,0" Click="OpenContextMenu"  />
            <Image Source="Images/ButtonSettings.png" Grid.Column="0" Grid.Row="0" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,5,0,0"/>







        </Grid>
        <Menu x:Name="menuOptions" VerticalAlignment="Top" Visibility="Hidden"  HorizontalAlignment="Left" Height="14" Width="574" >
            <Menu.RenderTransform>
                <TranslateTransform x:Name="translateMenu" Y="0"/>
            </Menu.RenderTransform>
            <MenuItem Header="Perfil" Click="GoToProfileWindow"/>
            <MenuItem Header="Jugadores" Click="GoToSearchWindow"/>
            <MenuItem Header="Solicitudes" Click="GoToFriendRequestsWindow"/>
            <MenuItem Header="Configuración" Click="GoToSettings"/>
            <MenuItem Header="Salir" Click="LogOut"/>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="206*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="342*"/>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="92*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonSearch" Grid.Column="3" Grid.Row="1" Background="Transparent" BorderBrush="Transparent"/>

        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="177*"/>
                <RowDefinition Height="134*"/>
                <RowDefinition Height="139*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="288*"/>
                <ColumnDefinition Width="399*"/>
                <ColumnDefinition Width="113*"/>
            </Grid.ColumnDefinitions>
            <Image Source="Images/GreenRectangle.png" Grid.Column="1" Grid.Row="1" Stretch="Fill"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="40,20,10,0" Orientation="Vertical" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="Images/WinsImage.png" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="Victorias" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="textBlockCurrentPlayerWins" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                    <Image Source="Images/LossesImage.png" Height="50"/>
                    <TextBlock Text="Derrotas"/>
                    <TextBlock x:Name="textBlockCurrentPlayerLosses"/>
                </StackPanel>
                
                
            </StackPanel>




        </Grid>

    </Grid>




</Page>

    
    