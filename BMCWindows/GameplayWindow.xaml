<Page x:Class="BMCWindows.GameplayWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BMCWindows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameplayWindow"
      Background="#FEFFDB">

    <Page.Resources>
        <!-- Estilo para cartas con efecto de hover (mueve hacia arriba cuando el mouse pasa por encima) -->
        <Style x:Key="HoverCardStyle" TargetType="Border">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0" Y="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform X="0" Y="-30"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para cartas con efecto de clic para quedarse desplazadas -->
        <Style x:Key="ClickableCardStyle" TargetType="Border">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0" Y="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Desplazar la carta hacia arriba cuando el mouse pasa por encima -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform X="0" Y="-30"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Mantener la carta desplazada al hacer clic y regresar al hacer clic de nuevo -->
                <Trigger Property="Tag" Value="Clicked">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform X="0" Y="-80"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Game Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <!-- Game Title -->
            <TextBlock x:Name="textBlockGameName" Grid.Row="0" Grid.ColumnSpan="3"  FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <!-- Game Grid with Cards -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonOOPosition" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="button10Position" Grid.Row="1" Grid.Column="0"/>
                <Button x:Name="button20Position" Grid.Row="2" Grid.Column="0" />
                <Button x:Name="button30Position" Grid.Row="3" Grid.Column="0"/>
                <Button x:Name="button40Position" Grid.Row="4" Grid.Column="0"/>

                <Button x:Name="button01Position" Grid.Row="0" Grid.Column="1"/>
                <Button x:Name="button11Position" Grid.Row="1" Grid.Column="1"/>
                <Button x:Name="button21Position" Grid.Row="2" Grid.Column="1"/>
                <Button x:Name="button31Position" Grid.Row="3" Grid.Column="1"/>
                <Button x:Name="button41Position" Grid.Row="4" Grid.Column="1"/>
                
                



                <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="Selecciona una carta para jugar" HorizontalAlignment="Center" Margin="10"/>
            </Grid>

            <!-- Player 1 Profile Section -->
            <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <TextBlock Text="Jugador 1:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Background="#43224D" Foreground="#FEFFDB"/>
                <ItemsControl x:Name="Player1Cards" Margin="5" Background="#43224D">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#D0EAB4" Margin="5" Width="60" Height="90">
                                <StackPanel>
                                    <Image Source="{Binding ProfileImage}" Width="50" Height="50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Username}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#FEFFDB"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Player 2 Profile Section -->
            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
                <TextBlock Text="Jugador 2:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Background="#43224D" Foreground="#FEFFDB"/>
                <ItemsControl x:Name="Player2Cards" Margin="5" Background="#43224D">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#D0EAB4" Margin="5" Width="60" Height="90">
                                <StackPanel>
                                    <Image Source="{Binding ProfileImage}" Width="50" Height="50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Username}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#FEFFDB"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Lobby Info -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Jugadores en el lobby:" FontSize="16" Margin="5"/>
                <TextBlock x:Name="TextBlockPlayerStatus" FontSize="16" Margin="5"/>
            </StackPanel>
        </Grid>

        <!-- Background Image -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="61*"/>
                <RowDefinition Height="17*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="58*"/>
                <ColumnDefinition Width="21*"/>
            </Grid.ColumnDefinitions>
            <Image Source="Images/Battlefield.jpg" Grid.Column="1" Grid.Row="1" IsHitTestVisible="False"/>
        </Grid>

        <!-- Leave Game Button -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="397*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28*"/>
                <ColumnDefinition Width="135*"/>
                <ColumnDefinition Width="637*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonLeaveGame" Grid.Column="1" Grid.Row="0" Background="Transparent" BorderBrush="Transparent" Click="LeaveGame"/>
            <Image Source="Images/BrownButton.png" Grid.Column="1" Grid.Row="0" Stretch="Fill" IsHitTestVisible="False"/>
            <TextBlock Text="Cancel" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="187*"/>
                <RowDefinition Height="38*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="196*"/>
                <ColumnDefinition Width="417*"/>
                <ColumnDefinition Width="187*"/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Style="{StaticResource ClickableCardStyle}" >
                        
                    </Border>
                </StackPanel>
                
            </Viewbox>
            

        </Grid>

    </Grid>
</Page>

