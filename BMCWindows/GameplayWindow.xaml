<Page x:Class="BMCWindows.GameplayWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BMCWindows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameplayWindow"
      Background="#FEFFDB">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="17*"/>
                <RowDefinition Height="133*"/>
            </Grid.RowDefinitions>
            <Image Source="Images/Battlefield.jpg" Grid.Column="0" Grid.Row="1" Stretch="Fill"/>


        </Grid>



        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Fila para el título -->
                <RowDefinition Height="*"/>
                <!-- Fila para el área de juego -->
                <RowDefinition Height="Auto"/>
                <!-- Fila para el estado del jugador -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <!-- Columna para la parte inferior izquierda -->
                <ColumnDefinition Width="Auto"/>
                <!-- Columna para el área de juego -->
                <ColumnDefinition Width="20*"/>
                <!-- Columna para la parte superior derecha -->
            </Grid.ColumnDefinitions>

            <!-- Título de la partida -->
            <TextBlock x:Name="textBlockGameName" Grid.Row="0" Grid.ColumnSpan="3"  FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <!-- Área de juego -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <!-- Crear 5 filas para las cartas -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- Crear 3 columnas para las cartas -->
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Colocar las cartas en el área de juego -->
                <ItemsControl x:Name="GameCards" Grid.Row="0" Grid.ColumnSpan="3" Margin="5">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="5" Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#A0A0A0" Margin="5" Width="60" Height="90">
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="Selecciona una carta para jugar" HorizontalAlignment="Center" Margin="10"/>
            </Grid>

            <!-- Cartas del Jugador 1 en la esquina superior derecha -->
            <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <TextBlock Text="Jugador 1:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Background="#43224D" Foreground="#FEFFDB"/>
                <ItemsControl x:Name="Player1Cards" Margin="5" Background="#43224D">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#D0EAB4" Margin="5" Width="60" Height="90">
                                <StackPanel>
                                    <Image Source="{Binding ProfileImage}"  Width="50" Height="50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Username}"  VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#FEFFDB"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Cartas del Jugador 2 en la esquina inferior izquierda -->
            <!-- Cartas del Jugador 2 en la esquina inferior izquierda -->
            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
                <TextBlock x:Name="textBloxPlayer2" Text="Jugador 2:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"  Background="#43224D" Foreground="#FEFFDB"/>
                <ItemsControl x:Name="Player2Cards" Margin="5" Background="#43224D">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#D0EAB4" Margin="5" Width="60" Height="90">
                                <StackPanel>
                                    <Image  Source="{Binding ProfileImage}" Width="50" Height="50" HorizontalAlignment="Center"/>
                                    <TextBlock  Text="{Binding Username}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#FEFFDB"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Estado del jugador -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Jugadores en el lobby:" FontSize="16" Margin="5"/>
                <TextBlock x:Name="TextBlockPlayerStatus" FontSize="16" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
